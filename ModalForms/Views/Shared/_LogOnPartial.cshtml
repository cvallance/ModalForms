@if(Request.IsAuthenticated) {
    <text>
        Welcome <strong>@User.Identity.Name</strong>!
        [
            @Html.ActionLink("Log Off", "LogOff", "Account")
            |
            @Html.ActionLink("Details", "Details", "Account")
        ]
    </text>
}
else {
    <text>
        [
            @Html.ActionLink("Log On", "LogOn", "Account", null, new { id = "logon-link" })
            |
            @Html.ActionLink("Register", "Register", "Account", null, new { id = "register-link" })
        ]
    </text>
}
